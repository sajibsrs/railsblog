<div class="jumbotron">
  <h1 class="display-4">List of all users</h1>
</div>

<div class="row">
  <% @users.each do |user| %>
      <div class="col-sm">
        <div class="media">
          <svg class="mr-3 rounded-circle" width="100px" height="100px"
               xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice"
               focusable="false" role="img" aria-label="Placeholder: Image cap">
            <rect width="100%" height="100%" fill="#868e96"></rect>
          </svg>
          <div class="media-body">
            <h5 class="mt-0"><%= user.fname + " " + user.lname %></h5>
            <p>Some information about user.</p>
            <%= link_to "Show details", user, :class => "btn btn-primary" %>
          </div>
        </div>
      </div>
  <% end %>
</div>

