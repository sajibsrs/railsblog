<h1 class="h2 align-middle d-inline-block">All posts</h1>
<%= link_to "Add new post", new_post_path, method: :get, :class => "btn btn-primary float-right" %>
<hr class="mb-4">

<div class="row">
  <% @posts.each do |post| %>
    <div class="col-6 mb-5">
      <div class="media">
        <svg class="mr-3 rounded-circle" width="100px" height="100px"
             xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice"
             focusable="false" role="img" aria-label="Placeholder: Image cap">
          <rect width="100%" height="100%" fill="#868e96"></rect>
        </svg>
        <div class="media-body">
          <h5 class="mt-0"><%= post.title %></h5>
          <p><%= post.content %></p>
          <%= link_to "Show post", post %>
        </div>
      </div>
    </div>
  <% end %>
</div>