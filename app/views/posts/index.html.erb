<div class="jumbotron">
  <h1 class="display-4">List of all posts</h1>
</div>

<div class="row">
  <% @posts.each do |post| %>
    <div class="col-4 mb-5">
      <div class="media">
        <svg class="mr-3 rounded-circle" width="100px" height="100px"
             xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice"
             focusable="false" role="img" aria-label="Placeholder: Image cap">
          <rect width="100%" height="100%" fill="#868e96"></rect>
        </svg>
        <div class="media-body">
          <h5 class="mt-0"><%= post.title %></h5>
          <p><%= post.content %></p>
          <%= link_to "more", post %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="row">
  <div class="col">
    <%= link_to "Add new post", new_post_path, method: :get, :class => "btn btn-primary" %>
  </div>
</div>