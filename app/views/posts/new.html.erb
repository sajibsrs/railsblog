<h1>Create post</h1>

<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, :class => "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, :class => "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.submit "Create", :class => "btn btn-success" %>
  </div>
<% end %>
