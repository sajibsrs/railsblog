<h1 class="h2">Edit post</h1>
<hr class="mb-4">

<%= form_for(@post) do |f| %>
  <div class="form-group">
   <%= f.label :title %>
    <%= f.text_field :title, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.rich_text_area :content, :class => "form-control trix-content" %>
  </div>
  <%= f.submit "Submit", :class => 'btn btn-primary' %>
<% end %>
